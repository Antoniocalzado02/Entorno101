package com.edu.boletin1;

public class Ejercicio6 {

	public static void main(String[] args) {
		System.out.println(sistemaTemperaturas(4,23));

	}
	public static String sistemaTemperaturas(int mesIndicado,int diaMes) {
			
		String mensaje="";
		if (mesIndicado>=3 && mesIndicado<=6) {
			if ((diaMes>=20 && mesIndicado>=3) || (mesIndicado<=6 && diaMes<=21)) {
					mensaje="Es Primavera, la temperatura es de 20º";
				}
		}else if(mesIndicado>=6 && mesIndicado<=9) {
			if ((diaMes>=21 && mesIndicado>=6) || (mesIndicado<=9 && diaMes<=23)) {
				mensaje="Es Verano, la temperatura es de 24º";
			}
		}else if(mesIndicado>=9 && mesIndicado<=12) {
			if ((diaMes>=23 && mesIndicado>=9) || (mesIndicado<=12 && diaMes<=21)) {
				mensaje="Es Otoño, la temperatura es de 24º";
			}
		}else if(mesIndicado==12 && mesIndicado<=3) {
			if ((diaMes>=21 && mesIndicado==12) || (mesIndicado<=3 && diaMes<=20)) {
				mensaje="Es Invierno, la temperatura es de 24º";
			}
			}
	
		
		
		
		
		return mensaje;
	}

}
