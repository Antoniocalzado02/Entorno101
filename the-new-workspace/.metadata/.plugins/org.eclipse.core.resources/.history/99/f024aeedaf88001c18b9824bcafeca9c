package nuevoAvion;

public class Rectangulo {
	private double longitud=1;
	private double ancho=1;
	
	
	public Rectangulo(double ancho,double longitud) {
		this.ancho=ancho;
		this.longitud=longitud;
	}
	
	
	//public Rectangulo(int ancho2, int longitud2) {
		//this.ancho=ancho2;
		//this.longitud=longitud2;
		
	//}


	public double getLongitud() {
		return longitud;
	}
	public void setLongitud(double longitud) {
		if (longitud>0 && longitud<=20) {
			this.longitud = longitud;
		}
	}
	public double getAncho() {
		return ancho;
	}
	public void setAncho(double ancho) {
		if (ancho>0 && ancho<=20) {
			this.ancho = ancho;

		}
		
	}
	
	public int calcularPerimetro(double ancho, double longitud) {
		this.ancho=ancho;
		this.longitud=longitud;
		int totalPerimetro=(longitud*2)+(ancho*2);
		
		return totalPerimetro;
		
	}
	
	public int calcularArea(int ancho, int longitud) {
		this.ancho=ancho;
		this.longitud=longitud;
		int totalArea=(longitud*ancho);
		
		return totalArea;
		
	}


}
